<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./../partials/head') %>
</head>

<body>
  <section class="chatForm">
    <form class="username" id="usernameForm" action="">
      <label>
        <input id="username" autocomplete="off" placeholder="Username" /><button class="formButton">
          Send
        </button>
      </label>
    </form>

    <ul id="messages"></ul>


    <form class="message" id="messageForm" action="">
      <label>
        <input type="hidden" id="currentSong" value="<%- tracksData.track.name %>">
        <input id="message" autocomplete="off" placeholder="Message" type="text" />
        <button class="formButton">
          Send
        </button>
      </label>
    </form>

  </section>


  <div class="playgame">
    <p id="trackName"><%- tracksData.track.name %></p>
    <button data-id="<%- tracksData.track.id %>" id="StartGame" class="button">
      Play song!
    </button>


    <button id="nextSong" class="button" data-token="<%- token %>">
      Next song!
    </button>


    <section id="roundEnd">
      <article id="informationTextAboutRound">
      </article>
    </section>

  </div>

  <!-- <main id="game" class="locked">
    <section id="trackList">

    </section> -->



  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
  <script src="/index.js"></script>
</body>

</html>